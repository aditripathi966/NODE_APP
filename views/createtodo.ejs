<%- include('partials/header') %>
<%- include('partials/nav') %>

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow p-4">
                <h1 class="mb-4 text-center">Create Your Vlog</h1>
                <form action="/createtodo" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter the title of your vlog" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" placeholder="Write a description for your vlog..." required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Create Vlog</button>
                    </div>
                    <p class="mt-3 text-center">Want to go back? <a href="/home">Home</a></p>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
